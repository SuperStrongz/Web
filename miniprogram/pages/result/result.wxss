.profession {
  width: 33.333%;
  border-bottom: 3px solid #fff;
  display: inline-block;
  text-align: center;
  padding-bottom: 10px;
}
.toptitle,
.subtitle {
  text-align: center;
}
.back {
  float: left;
}
.toptitle {
  margin: 5px 0 0 0;
  font-size: 16px;
}
.subtitle {
  padding: 5px 0 30px 0;
}
.title {
  border-top: 1px solid #b8b8b8;
  padding: 10px 0 10px 15px;
  word-spacing: 25px;
}
.studyPeople {
  float: right;
  font-size: 15px;
  color: #b8b8b8;
  margin-right: 15px;
  font-weight: 500;
}
.list :last-child {
  border-bottom: 1px solid #b8b8b8;
  margin-bottom: 10px;
}
.clicked {
  color: #179b16;
  border-bottom: 3px solid #179b16;
}
